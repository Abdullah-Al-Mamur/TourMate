                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="31 July, 2019"
                        android:textAlignment="textStart"/>



                </LinearLayout>


            </LinearLayout>












        </androidx.cardview.widget.CardView>




    </LinearLayout>


