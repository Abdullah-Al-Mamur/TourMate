<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD YOUR TOUR"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="9dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TOUR TITLE"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_plane"
        android:drawablePadding="8dp"
        android:hint="Your trip name"
        android:textSize="14dp"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TOUR DESCRIPTION"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_light"
        android:drawablePadding="8dp"
        android:hint="Your trip description"
        android:textSize="14dp"
        android:maxLines="5"
        android:lines="5"
       android:inputType="textMultiLine"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TOUR START DATE"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:hint="08/01/2019"
        android:textSize="14dp"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TOUR END DATE"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:hint="08/01/2019"
        android:textSize="14dp"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <Button
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_design"
        android:text="ADD"
        android:textSize="14dp"
        android:textColor="#FFF"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    
    

</LinearLayout>